---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import { getHeaderData } from '~/navigation';
import { DEFAULT_LANGUAGE, type LanguageCode } from '~/i18n/config';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  lang?: LanguageCode;
}

const { metadata, lang = DEFAULT_LANGUAGE } = Astro.props;
const headerData = getHeaderData(lang);
---

<PageLayout metadata={metadata} lang={lang}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        links={headerData?.links[2] ? [headerData.links[2]] : undefined}
        actions={headerData.actions}
        showToggleTheme
        position="right"
        language={lang}
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
