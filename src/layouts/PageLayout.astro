---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

import { getHeaderData, getFooterData } from '~/navigation';
import { DEFAULT_LANGUAGE, type LanguageCode } from '~/i18n/config';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  lang?: LanguageCode;
}

const { metadata, lang = DEFAULT_LANGUAGE } = Astro.props;
const headerData = getHeaderData(lang);
const footerData = getFooterData(lang);
---

<Layout metadata={metadata} lang={lang}>
  <slot name="announcement">
    <Announcement />
  </slot>
  <slot name="header">
    <Header {...headerData} isSticky showRssFeed showToggleTheme language={lang} />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
