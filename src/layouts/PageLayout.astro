---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import { headerData as defaultHeaderData, footerData as defaultFooterData } from '~/navigation';
import type { SupportedLanguage } from '~/data/languages';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  headerData?: typeof defaultHeaderData;
  footerData?: typeof defaultFooterData;
  lang?: SupportedLanguage;
  showLanguageSelector?: boolean;
}

const {
  metadata,
  headerData = defaultHeaderData,
  footerData = defaultFooterData,
  lang = 'es',
  showLanguageSelector = false,
} = Astro.props;
---

<Layout metadata={metadata} lang={lang}>
  <slot name="header">
    <Header
      {...headerData}
      isSticky
      showToggleTheme
      showLanguageSelector={showLanguageSelector}
      currentLang={lang}
    />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
