---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 150 110);
    --aw-color-secondary: rgb(214 38 18);
    --aw-color-accent: rgb(27 67 50);

    --aw-color-text-heading: rgb(8 31 23);
    --aw-color-text-default: rgb(20 24 24);
    --aw-color-text-muted: rgb(20 24 24 / 70%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(10 36 24);

    ::selection {
      background-color: rgb(214 38 18 / 85%);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 160 110);
    --aw-color-secondary: rgb(214 38 18);
    --aw-color-accent: rgb(104 181 136);

    --aw-color-text-heading: rgb(238 248 243);
    --aw-color-text-default: rgb(220 234 226);
    --aw-color-text-muted: rgb(220 234 226 / 70%);
    --aw-color-bg-page: rgb(12 36 22);

    ::selection {
      background-color: rgb(214 38 18 / 85%);
      color: snow;
    }
  }
</style>
